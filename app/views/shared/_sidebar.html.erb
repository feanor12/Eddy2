<%content_for :sidebar do %>
  <div id="home_mylinks" class="inner_box">
    <h2> Mylinks <%=new_link("mylinks")%></h2>
    <%@mylinks.each do |link|%>
      <div id="mylink<%=link.id%>">
        <%=link_to link.name, link.url%>
        <%=destroy_link(link,mylink_path(link),:remote=>true)%>
      </div>
    <%end%>
  </div>

  <div id="home_downloads" class="inner_box">
    <h2>Downloads</h2>
    <%@downloads.each do |dl|%>
      <%next if dl.links.empty?%>
      <%=link_to dl.name,dl.links.find(:first).url%><br/>
    <%end%>
  </div>
<%end%>


