<li id="post<%=params[:id]%>" class="post">
<%=content_tag :h1 do%>
  <%=post.title%>
<%end if defined? show_title%>
  <div class="content">
  <%= simple_format(auto_link(post.body))%>

  <div class="item-menu">
    <b id="comment-count" class="comment-count">
      <%=pluralize post.comments.length, "Comment"%>
    </b>

    <div id="item-actions">
      <%=link_to("Show", post_path(post),:class=>"action_tag") unless current_page?(:id=>post.id,:action=>"show")%>
      <%=edit_link(post,edit_post_path(post))%>
      <%=destroy_link(post,post_path(post))%>
    </div>
  </div>

    <%=clear()%>
  </div>
</li>
