<%title(@post.title)%>

<%=boxed @post.title do%>
  <%=render :partial=>@post%>
<%end%>

<%=boxed "Comments" do%>
  <%=render :partial=>"comments/comment.html", :collection=>@post.comments%>
<%end if (not @post.comments.empty?) && permitted_to?(:read,@post.comments)%>

<%=boxed "Add your comment" do%>
  <%=render :partial=>"comments/form"%>
<%end if permitted_to?(:create,:comments)%>
