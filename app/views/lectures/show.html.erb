<%title(@lecture.name)%>

<%=boxed @lecture.name do%>
	<h3>Semester: <%=@lecture.semester%></h3>
	<h3>Info: </h3>
    <%=simple_format(auto_link(@lecture.description))%>
<%end%>

<%=boxed "Announcements",:new=>"announcements",:new_path=>new_lecture_announcement_path(@lecture),:paginate=>@announcements do%>
  <%= render :partial=>@announcements unless @announcements.empty?%>
  <%=content_tag :li do%>
    No Announcements made
  <%end if @announcements.empty?%>
<%end if permitted_to?(:read,:announcements)%>

<%=boxed "Downloads", :new_path=>new_lecture_download_path(@lecture),:new=>"downloads" do%>
  <%=render :partial=>'downloads/download',:collection=>@downloads%>
<%end if permitted_to?(:read,:downloads)%>
