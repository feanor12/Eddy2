<%title(@download.name)%>
<%=boxed @download.name do%>

  <%=boxed "Description" do%>
    <%=simple_format(auto_link(@download.description))%>
  <%end%>

  <%=boxed "Mirrors" do%>
    <%if @download.links.blank?%>
      No Links added
    <%else%>
      <%=render :partial=>@download.links%>
    <%end%>
    <%=link_to "Metalink",lecture_download_path(@download.lecture,@download,:format=>:xml)%>
  <%end%>

  <%=boxed "Add a Mirror" do%>
    <p>Upload your File to a free Filehost(Mediafire,Rapidshare,..)</p>
    <p>Copy Download URL into to Field below</p>
    <%=render :partial=>'links/form'%>
  <%end%>
<%end%>
