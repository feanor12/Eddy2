<li id="comment<%=comment.id%>">
  <%=content_tag(:div,simple_format(auto_link(comment.body)))%>
  <%=content_tag(:div,"by "+comment.user.login)%>
  
  <%
    comment_destroy_url=case params[:controller]
      when 'posts' then [comment.commentable,comment]
      when 'announcements' then [comment.commentable.lecture,comment.commentable,comment]
    end
  %>

  <%=content_tag(:div,destroy_link(comment,comment_destroy_url,:remote=>true),:class=>"item-menu")%>
  <%=clear%>
</li>

